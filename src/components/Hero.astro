---
import { template } from "../settings";
---

<div class="hero min-h-screen bg-base-200">
  <div class="hero-content text-center">
    <div class="max-w-4xl">
      <div class="avatar mb-8">
        <div
          class="w-32 h-32 rounded-full ring ring-primary ring-offset-base-100 ring-offset-2"
        >
          <img
            src="/profile-placeholder.jpg"
            alt={`${template.person.name} profile photo`}
          />
        </div>
      </div>
      <h1 class="text-5xl font-bold mb-2">{template.person.name}</h1>
      <p class="text-xl text-base-content/70 mb-2">{template.person.title}</p>
      <p class="text-lg text-base-content/60 mb-6">
        {template.person.affiliation}
      </p>
      <p class="py-6 text-lg max-w-2xl mx-auto leading-relaxed">
        {template.person.bio}
      </p>
      <div class="flex flex-wrap justify-center gap-4 mb-8">
        {
          template.person.interests.map((interest) => (
            <div class="badge badge-primary badge-lg">{interest}</div>
          ))
        }
      </div>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="/about" class="btn btn-primary btn-lg">
          Learn More About Me
        </a>
        <a href="/publications" class="btn btn-outline btn-lg">
          View Publications
        </a>
        <a href="/contact" class="btn btn-secondary btn-lg"> Get In Touch </a>
      </div>
    </div>
  </div>
</div>
