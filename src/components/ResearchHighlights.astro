---
import { profile } from "../settings";
---

<div class="py-16 bg-base-100">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12">Research Areas</h2>
    <div class="grid md:grid-cols-3 gap-8">
      {
        profile.research_areas.map((area) => (
          <div class="card bg-base-200 shadow-xl">
            <div class="card-body">
              <h3 class="card-title text-primary">{area.title}</h3>
              <p class="text-base-content/80">{area.description}</p>
              <div class="card-actions justify-end">
                <a href="/research" class="btn btn-primary btn-sm">
                  Learn More
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</div>
